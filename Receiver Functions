#define Yaw 1
#define Roll 2
#define Pitch 3
#define Throttle 4
#define totChannel 4//total no. of channels,can be changed in future

int receiverZero[totChannel];//command corresponding to neutral throttle
int receiverSlope[totChannel]={1,1,1,1};//slope factor
int receiverOffset[totChannel]={ , , , };//to be filled
int receiverData[totChannel];//accurate receiver data
int receiverRawData[toChannel];//raw receiver data

int channel;

void setZero(){
for(channel=Yaw;channel<Throttle;++channel){
   receiverZero[i]=1500;
 }
}

void setOffset(){
   for(channel=Yaw;channel<Throttle;++channel){
     receiverData[channel]=receiverSlope[channel]*receiverRawData[channel]+receiverOffset[channel];
   }  
}

void PID_SetPoint(){
    for(channel=Yaw;channel<Throttle;++channel){
       map(receiverData[channel]-receiverZero[channel],-500,500,-5,5);//mapped between extreme values of -5 to +5 radians
   //call to the respective PID function
  }
 }
